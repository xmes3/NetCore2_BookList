@model Book
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<hr />

    <div class="row form-border">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route_id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" asp-route_id="@Model.Id" class="btn btn-sm btn-success">Back to list</a>
        </div>
    </div>


